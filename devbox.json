{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "go@1.25",
    "wget@latest",
    "golangci-lint@1.64.5",
    "terraform@latest"
  ],
  "env": {
    "GOPATH": "$PWD/.devbox/go",
    "GOBIN": "$PWD/.devbox/go/bin",
    "PATH": "$PWD/.devbox/go/bin:$PATH"
  },
  "shell": {
    "init_hook": [
      "unset DEVELOPER_DIR",
      "if ! command -v tfplugindocs &> /dev/null; then echo 'Installing tfplugindocs...'; go install github.com/hashicorp/terraform-plugin-docs/cmd/tfplugindocs@latest; fi"
    ],
    "scripts": {}
  }
}
